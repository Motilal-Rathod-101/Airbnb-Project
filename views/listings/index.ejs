<% layout("/layouts/boilerplate") %>

<body id="index-container">
  <a href="/listings/trendings">
  <div id="filters">
      <div class="filter">
        <i class="material-symbols-outlined"> local_fire_department </i>
        <p>Trending</p>
      </div></a
    >

    <div class="filter">
      <i class="material-symbols-outlined"> bed</i>
      <p>Rooms</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> location_city</i>
      <p>Iconic cities</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> landscape </i>
      <p>Castles</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> castle</i>
      <p>Castles</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> pool</i>
      <p>Amazing Pools</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> camping </i>
      <p>Camping</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> agriculture </i>
      <p>Farms</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> ac_unit </i>
      <p>Arctic</p>
    </div>

    <div class="filter">
      <i class="material-symbols-outlined"> houseboat </i>
      <p>Houseboat</p>
    </div>
    <div class="filter">
      <i class="material-symbols-outlined"> meeting_room</i>
      <p>MeetingRoom</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 allcards">
    <% for( let listing of allListings ) { %>
    <a
      href="/listings/<%= listing._id %>"
      class="card col listing-card"
      style="width: 20rem"
    >
      <div class="" style="width: 100%">
        <img
          src="<%= listing.image.url  %>"
          class="card-img-top"
          alt="Listing_images"
          style="height: 20rem"
        />
        <div class="card-img-overlay">&#10084;</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %> </b> <br />
            <b>&#8377; <%= listing.price.toLocaleString("en-IN")%></b>/Night
            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            <br />

            <br />
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
